<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link href="css/order.css" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
        <link href="css/font-awesome.min.css" rel="stylesheet">
        <script src="js/bookorder.js"></script>
    </head>
    <body class="container" ng-app="myApp" ng-controller="MainCtrl">
        <main>
            <form method="post" action="/adminhome2">
                <button type="submit">Home
                    <i class="fas fa-home" style="font-size:24px"></i>
                </button>
            </form>
            <div class="mystyle">
                <h1>
                    <b>Manage Book Orders
                        <b>
                        </h1>
                    </div>
                    </br>
                    <form method="post" action="/billing" ng-submit="store()">
                        <button type="button" ng-click="getDataBookOrder()">Get Book Order Details</button>
                        </br>
                        </br>
                        <h4>
                            <b>
                                <option selected> Select Bill Number</option>
                            </b>
                        </h4>
                        <select class="brower-default custom-select" ng-model="bookcode" ng-change="add()">
                            <option ng-repeat="book in books" value="{{book.billno}}">{{book.billno}}</option>
                        </select>
                    </div>
                    <table class="table table-striped">
                        <table>
                            <tr>
                                <th>ISBN</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Discount</th>
                                <th>Total</th>
                                <th>Del Name</th>
                                <th>Delivery Address</th>
                                <th>Del Phone</th>
                            </tr>
                            <tr mdbTableCol ng-repeat="book in addBooks | filter:bookcode">
                                <td>{{book.isbn}}</td>
                                <td>{{book.title}}</td>
                                <td>{{book.author}}</td>
                                <td>{{book.price}}</td>
                                <td>{{book.quantity}}</td>
                                <td>{{book.discount}}</td>
                                <td>{{book.total}}</td>
                                <td>{{book.delname}}</td>
                                <td>{{book.deladd}}</td>
                                <td>{{book.delphone}}</td>
                            </tr>
                        </table>
                    </div>
                </form>
            </div>
            <form method="get" action="/admin">
                <p align="right">
                    <button type="submit">Logout
                        <i class="fas fa-sign-in-alt" style="font-size:24px"></i>
                    </button>
                </p>
            </form>
        </main>
    </body>
</html>
